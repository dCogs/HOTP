@model List<HOTP.Models.tblHOTP_Goals>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

@using (Html.BeginForm("Index", "Goal", FormMethod.Post))
{
    <table class="table">
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>
                    @Html.Hidden("goals.Index", (@i + 10))
                    @Html.TextBox("goals[" + (@i + 10) + "].GoalID",
                    Model[i].GoalID, new { @readonly = "readonly" })
                </td>
                <td>
                    @Html.TextBox("goals[" + (@i + 10) + "].YearEnding",
                    Model[i].YearEnding)
                </td>
                <td>
                    @Html.TextBox("goals[" + (@i + 10) + "].Pillar",
                    Model[i].Pillar)
                </td>
                <td>
                    @Html.TextBox("goals[" + (@i + 10) + "].GoalName",
                    Model[i].GoalName)
                </td>
                <td>
                    @Html.TextBox("goals[" + (@i + 10) + "].Goal",
                    Model[i].Goal)
                </td>
            </tr>
        }

        <tr>
            <td colspan="4">
                <input type="submit" value="Submit" />
            </td>
        </tr>
    </table>
}
