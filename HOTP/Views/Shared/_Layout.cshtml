<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Hospice of the Panhandle Goal Management</title>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:#034f5a; height:118px;">
        <div class="container">
            <div class="navbar-header">
                <div class="img-rounded" style="background-color:white;margin: 10px 12px 10px -12px;padding:8px 8px 8px 8px">
                    &nbsp;
                    <img src="~/Content/Images/logo.png" />
                </div>
            </div>
            <div class="pull-right">
                @Html.Partial("_LoginPartial")
            </div>
            <div class="pull-left">
                <ul class="nav nav-pills">
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Index"
                            && ViewContext.RouteData.Values["Controller"].ToString() == "Home" ? "active" : "")">
                        @Html.ActionLink("Home", "Index", "Home")
                    </li>
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Index"
                         && ViewContext.RouteData.Values["Controller"].ToString() == "EmployeeGoals" ? "active" : "")">
                        @Html.ActionLink("Employee Goals", "Index", "EmployeeGoals")
                    </li>
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Eval"
                         && ViewContext.RouteData.Values["Controller"].ToString() == "EmployeeGoals" ? "active" : "")">
                        @Html.ActionLink("Annual Evaluations", "Eval", "EmployeeGoals")
                    </li>
                    @*<li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Eval"
                         && ViewContext.RouteData.Values["Controller"].ToString() == "EmployeeGoals" ? "active" : "")">
                        @Html.ActionLink("Evaluations", "Eval", "EmployeeGoals")
                    </li>*@
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Index"
                            && ViewContext.RouteData.Values["Controller"].ToString() == "Plan90" ? "active" : "")">
                        @Html.ActionLink("90-Day Plans", "Index", "Plan90")
                    </li>
                    @if (HOTPHelpers.Helpers.MyHTMLHelpers.AdminRole(User.Identity.Name))
                    {
                        @*@if (User.IsInRole("Admin")) {*@
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                Admin
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Index"
                            && ViewContext.RouteData.Values["Controller"].ToString() == "Employees" ? "active" : "")">
                                    @Html.ActionLink("Employees", "Index", "Employees")
                                </li>
                                <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Index"
                            && ViewContext.RouteData.Values["Controller"].ToString() == "OrgGoals" ? "active" : "")">
                                    @Html.ActionLink("Organizational Goals", "Index", "OrgGoals")
                                </li>
                                <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Index"
                            && ViewContext.RouteData.Values["Controller"].ToString() == "Codes" ? "active" : "")">
                                    @Html.ActionLink("Codes", "Index", "Codes")
                                </li>
                            </ul>
                        </li>
                    }
                </ul>

            </div>

        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Hospice of the Panhandle, Inc.</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
